---
import { links } from "../data/links";

const footerLinks = [
  { name: "Home", href: `${import.meta.env.BASE_URL}` },
  { name: "Mods", href: `${import.meta.env.BASE_URL}mods/` },
  { name: "Features", href: `${import.meta.env.BASE_URL}features/` },
  { name: "Docs", href: `${import.meta.env.BASE_URL}docs/` },
  { name: "FAQ", href: `${import.meta.env.BASE_URL}faq/` },
  { name: "Support", href: `${import.meta.env.BASE_URL}support/` },
  { name: "Credits", href: `${import.meta.env.BASE_URL}credits/` },
];

const externalLinks = links.slice(0, 4);
---

<footer class="relative z-10 border-t border-white/10 py-12">
  <div class="container-wide">
    <!-- Main Footer Content -->
    <div
      class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8 lg:gap-12 mb-12"
    >
      <!-- Brand -->
      <div class="lg:col-span-1">
        <a
          href={`${import.meta.env.BASE_URL}`}
          class="flex items-center gap-3 mb-4 group"
        >
          <div
            class="w-10 h-10 rounded-lg bg-gradient-to-br from-blue-500 to-purple-600 flex items-center justify-center font-bold text-white shadow-lg transition-transform group-hover:scale-105"
          >
            T
          </div>
          <div>
            <span class="font-bold text-lg text-white block">Taj's Mods</span>
            <span class="text-sm text-gray-500">for Upload Labs</span>
          </div>
        </a>
        <p class="text-sm text-gray-400 max-w-xs">
          Your hub for Upload Labs mods. Quality-of-life enhancements, visual
          tweaks, and powerful tools.
        </p>
      </div>

      <!-- Navigation -->
      <div>
        <h3
          class="font-semibold text-sm uppercase tracking-wider text-gray-500 mb-4"
        >
          Navigation
        </h3>
        <ul class="space-y-2">
          {
            footerLinks.map((link) => (
              <li>
                <a
                  href={link.href}
                  class="text-gray-400 hover:text-primary transition-colors flex items-center gap-2"
                >
                  <span class="material-icons text-sm">chevron_right</span>
                  {link.name}
                </a>
              </li>
            ))
          }
        </ul>
      </div>

      <!-- External Links -->
      <div>
        <h3
          class="font-semibold text-sm uppercase tracking-wider text-gray-500 mb-4"
        >
          Links
        </h3>
        <ul class="space-y-2">
          {
            externalLinks.map((link) => (
              <li>
                <a
                  href={link.url}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="text-gray-400 hover:text-primary transition-colors inline-flex items-center gap-2"
                >
                  <span class="material-icons text-sm">open_in_new</span>
                  {link.name}
                </a>
              </li>
            ))
          }
        </ul>
      </div>

      <!-- Subscribe CTA -->
      <div>
        <h3
          class="font-semibold text-sm uppercase tracking-wider text-gray-500 mb-4"
        >
          Get Started
        </h3>
        <p class="text-sm text-gray-400 mb-4">
          Subscribe on Steam Workshop for automatic updates.
        </p>
        <a
          href="https://steamcommunity.com/sharedfiles/filedetails/?id=3628222709"
          target="_blank"
          rel="noopener noreferrer"
          class="btn-glow inline-flex items-center gap-2 bg-gradient-to-r from-orange-500 to-red-500 hover:from-orange-400 hover:to-red-400 text-white px-5 py-2.5 rounded-lg font-semibold text-sm transition-transform active:scale-95"
        >
          Subscribe Now
        </a>
      </div>
    </div>

    <!-- Bottom Bar -->
    <div
      class="pt-8 border-t border-white/10 flex flex-col md:flex-row justify-between items-center gap-6"
    >
      <div class="flex items-center gap-2 text-gray-500 text-sm">
        <span class="material-icons text-base">person</span>
        Active Development
      </div>

      <p class="text-sm text-gray-500">
        Â© {new Date().getFullYear()} Taj's Mods. All rights reserved.
      </p>

      <div class="flex items-center gap-2 text-gray-500 text-sm">
        <span class="material-icons text-base">local_offer</span>
        Free
      </div>
    </div>

    <!-- Search Button -->
    <div class="flex justify-end mt-4">
      <button
        onclick="document.dispatchEvent(new KeyboardEvent('keydown', { key: 'k', ctrlKey: true }))"
        class="flex items-center gap-2 px-4 py-2 rounded-full glass-panel hover:bg-white/10 text-gray-400 text-sm transition-colors"
      >
        <span class="material-icons text-sm">search</span>
        Search
      </button>
    </div>
  </div>
</footer>
