---
interface Props {
  title: string;
  description: string;
  href: string;
  icon: string;
  external?: boolean;
}

const { title, description, href, icon, external = false } = Astro.props;
---

<a
  href={href}
  target={external ? "_blank" : undefined}
  rel={external ? "noopener noreferrer" : undefined}
  class="glass-card rounded-xl p-5 flex items-start gap-4 group hover:bg-white/5 transition-all duration-300"
>
  <div
    class="flex-shrink-0 w-12 h-12 rounded-xl bg-white/5 border border-white/10 flex items-center justify-center text-2xl group-hover:bg-primary/20 group-hover:border-primary/30 transition-all duration-300"
  >
    {icon}
  </div>
  <div class="flex-1 min-w-0">
    <div class="flex items-center gap-2">
      <h3
        class="font-semibold text-lg text-white group-hover:text-primary transition-colors"
      >
        {title}
      </h3>
      {
        external && (
          <span class="material-icons text-sm text-gray-500">open_in_new</span>
        )
      }
    </div>
    <p class="text-gray-400 text-sm">
      {description}
    </p>
  </div>
  <svg
    class="w-5 h-5 text-gray-500 group-hover:text-primary transition-colors flex-shrink-0 mt-1"
    fill="none"
    stroke="currentColor"
    viewBox="0 0 24 24"
  >
    <path
      stroke-linecap="round"
      stroke-linejoin="round"
      stroke-width="2"
      d="M9 5l7 7-7 7"></path>
  </svg>
</a>
