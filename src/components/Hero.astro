---
interface Props {
  showLogo?: boolean;
}

const { showLogo = true } = Astro.props;
---

<section class="relative min-h-[80vh] flex items-center justify-center overflow-hidden pt-8 pb-20">
  <!-- Hero Card Container -->
  <div class="relative container-wide z-10">
    <!-- Main Hero Glass Card -->
    <div class="glass-card rounded-3xl p-8 md:p-12 relative overflow-hidden group">
      <!-- Glow effect in top right -->
      <div class="absolute -top-24 -right-24 w-64 h-64 bg-primary/20 rounded-full blur-[80px] group-hover:bg-primary/30 transition-all duration-700"></div>
      
      <!-- Rainbow/Aurora gradient at bottom (like in the design) -->
      <div class="absolute bottom-0 left-1/4 right-1/4 h-1 bg-gradient-to-r from-red-500 via-yellow-500 via-green-500 via-blue-500 to-purple-500 opacity-50 blur-sm"></div>
      
      <div class="flex flex-col lg:flex-row gap-8 lg:gap-12 items-center relative z-10">
        <!-- Left Content -->
        <div class="flex-1 text-center lg:text-left">
          <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold text-white mb-6 tracking-tight animate-in">
            Taj's Mods
          </h1>

          <p class="text-xl md:text-2xl text-gray-300 mb-4 leading-relaxed animate-in stagger-1">
            Your hub for <span class="text-primary font-semibold">quality-of-life</span> enhancements, 
            <span class="text-primary font-semibold">visual tweaks</span>, and 
            <span class="text-primary font-semibold">powerful tools</span> for Upload Labs
          </p>

          <p class="text-gray-400 max-w-2xl mb-8 animate-in stagger-2">
            Taj's Mods is an quality-of-life enhancements, visual tweaks, and powerful tools for Upload Labs as worthy.
          </p>

          <!-- CTA Buttons -->
          <div class="flex flex-col sm:flex-row items-center lg:items-start gap-4 animate-in stagger-3">
            <a
              href="https://steamcommunity.com/sharedfiles/filedetails/?id=3628222709"
              target="_blank"
              rel="noopener noreferrer"
              class="btn-glow flex items-center gap-2 bg-gradient-to-r from-orange-500 to-red-500 hover:from-orange-400 hover:to-red-400 text-white px-6 py-3 rounded-lg font-semibold transition-transform active:scale-95"
            >
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                <path d="M12 2a10 10 0 1 0 0 20 10 10 0 0 0 0-20zm0 18a8 8 0 1 1 0-16 8 8 0 0 1 0 16zm-2-5.5l6-3.5-6-3.5v7z"/>
              </svg>
              Subscribe on Steam
            </a>

            <a
              href="https://github.com/TajemnikTV/TajsMod"
              target="_blank"
              rel="noopener noreferrer"
              class="btn-secondary flex items-center gap-2"
            >
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"></path>
              </svg>
              View on GitHub
            </a>
          </div>
        </div>

        <!-- Right Content - Logo Display -->
        {showLogo && (
          <div class="flex-shrink-0 animate-in stagger-2">
            <div class="relative">
              <!-- Glow behind logo -->
              <div class="absolute inset-0 bg-gradient-to-br from-blue-500/30 via-purple-500/30 to-pink-500/30 rounded-3xl blur-2xl scale-110"></div>
              
              <!-- Logo Container -->
              <div class="relative w-48 h-48 md:w-56 md:h-56 rounded-3xl bg-gradient-to-br from-indigo-500/20 via-purple-500/20 to-pink-500/20 border border-white/10 shadow-2xl flex items-center justify-center backdrop-blur-sm">
                <img
                  src={`${import.meta.env.BASE_URL}brand/TajsModLogo.png`}
                  alt="Taj's Mods Logo"
                  class="w-36 h-36 md:w-44 md:h-44 object-contain drop-shadow-2xl"
                  loading="eager"
                />
              </div>
            </div>
          </div>
        )}
      </div>
    </div>
  </div>
</section>

<!-- Trust Bar Section -->
<div class="relative z-10 py-6 border-t border-white/5">
  <div class="container-wide">
    <div class="flex flex-wrap items-center justify-center gap-6 md:gap-12 text-sm text-gray-400">
      <div class="flex items-center gap-2">
        <span class="material-icons text-base">person</span>
        Active Development
      </div>
      <div class="flex items-center gap-2">
        <span class="material-icons text-base">copyright</span>
        All rights reserved
      </div>
      <div class="flex items-center gap-2">
        <span class="material-icons text-base">local_offer</span>
        Free
      </div>
      
      <!-- Search Button on the right -->
      <div class="flex-1 flex justify-end">
        <button 
          onclick="document.dispatchEvent(new KeyboardEvent('keydown', { key: 'k', ctrlKey: true }))"
          class="flex items-center gap-2 px-4 py-2 rounded-full glass-panel hover:bg-white/10 text-gray-300 text-sm transition-colors"
        >
          <span class="material-icons text-sm">search</span>
          Search
        </button>
      </div>
    </div>
  </div>
</div>
