---
import BaseLayout from "../../layouts/BaseLayout.astro";
import LinkCard from "../../components/LinkCard.astro";

// Documentation sections linking to Starlight docs at /docs/
const docSections = [
  {
    title: "Core API",
    description: "Core API documentation for developers",
    href: `${import.meta.env.BASE_URL}docs/Core/API/`,
    icon: "üìñ",
  },
  {
    title: "Keybinds API",
    description: "Keybinds Manager API reference",
    href: `${import.meta.env.BASE_URL}docs/Core/keybinds_api/`,
    icon: "‚å®Ô∏è",
  },
  {
    title: "Module Guide",
    description: "Guide for creating new modules",
    href: `${import.meta.env.BASE_URL}docs/Core/MODULE_GUIDE/`,
    icon: "üèóÔ∏è",
  },
  {
    title: "Settings & Migrations",
    description: "Settings and migrations guide",
    href: `${import.meta.env.BASE_URL}docs/Core/SETTINGS_AND_MIGRATIONS/`,
    icon: "‚öôÔ∏è",
  },
];
---

<BaseLayout
  title="Help Center"
  description="Help center for Taj's Mod. Quick start guides and documentation links."
>
  <!-- Header -->
  <section class="relative z-10 pt-12 pb-8">
    <div class="container-wide text-center">
      <h1 class="text-4xl md:text-5xl font-bold mb-4 text-white">
        Help Center
      </h1>
      <p class="text-gray-400 max-w-2xl mx-auto text-lg">
        Everything you need to know about using and contributing to Taj's Mod.
      </p>
    </div>
  </section>

  <!-- Quick Start -->
  <section class="section relative z-10">
    <div class="container-wide">
      <div class="max-w-4xl mx-auto mb-16">
        <div class="glass-card rounded-2xl p-8">
          <div class="flex items-start gap-4">
            <div class="text-4xl">üöÄ</div>
            <div>
              <h2 class="text-xl font-semibold mb-2 text-white">Quick Start</h2>
              <p class="text-gray-400 mb-4">
                New to Taj's Mod? Getting started takes less than a minute.
              </p>
              <ol class="list-decimal list-inside space-y-2 text-gray-300 mb-4">
                <li>
                  <strong>Subscribe</strong> on the <a
                    href="https://steamcommunity.com/sharedfiles/filedetails/?id=3628222709"
                    target="_blank"
                    rel="noopener noreferrer"
                    class="text-primary hover:text-primary-hover underline"
                    >Steam Workshop</a
                  >
                </li>
                <li>
                  <strong>Launch</strong> Upload Labs - the mod loads automatically
                </li>
                <li>
                  <strong>Open settings</strong> via the puzzle piece icon (‚öôÔ∏è) in-game
                </li>
                <li>
                  <strong>Use Command Palette</strong> with MMB or Spacebar for quick
                  actions
                </li>
              </ol>
              <a
                href={`${import.meta.env.BASE_URL}faq/`}
                class="btn-secondary text-sm"
              >
                Having issues? Check the FAQ
              </a>
            </div>
          </div>
        </div>
      </div>

      <!-- Documentation Sections -->
      <h2 class="text-2xl font-bold mb-8 text-center text-white">
        Documentation
      </h2>

      <div
        class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 max-w-5xl mx-auto"
      >
        {
          docSections.map((doc) => (
            <LinkCard
              title={doc.title}
              description={doc.description}
              href={doc.href}
              icon={doc.icon}
            />
          ))
        }
      </div>

      <!-- Full Docs Link -->
      <div class="text-center mt-12">
        <p class="text-gray-400 mb-4">
          Looking for more detailed technical documentation?
        </p>
        <a
          href={`${import.meta.env.BASE_URL}docs/`}
          class="btn-glow inline-flex items-center gap-2 bg-gradient-to-r from-orange-500 to-red-500 hover:from-orange-400 hover:to-red-400 text-white px-6 py-3 rounded-lg font-semibold"
        >
          <span>üìö</span>
          Browse Full Documentation
        </a>
      </div>
    </div>
  </section>
</BaseLayout>
